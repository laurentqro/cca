<!DOCTYPE html>
<html>
  <head>
    <title>CCA</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <% if allow_action? :users, :index %>
        <%= link_to 'Comptes utilisateurs', users_url %>
      <% end %>
      | <%= link_to 'Projets actifs', projects_url %>
      <% if allow_action? :archives, :index %>
      | <%= link_to 'Archives', archives_url %>
      <% end %>
      | <%= link_to 'Profil', user_url(current_user) %>
      | <%= link_to 'DÃ©connexion', session_url, method: :delete %>
    <% else %>
      | <%= link_to 'Connexion', new_session_url %>
    <% end %>

    <%= tag.p notice, id: 'notice' %>

    <%= yield %>
  </body>
</html>
