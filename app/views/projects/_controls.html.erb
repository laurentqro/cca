<% if project.active? %>
  <ul class="flex list-reset text-sm py-3">
    <% if subscription.present? %>
      <li class="mr-4">
        <%= button_to project_subscription_url(project, subscription), class: "btn btn-blue", method: :delete do %>
          <span>
            (<%= project.subscribers.count %>)
          </span>
          <span class="icon is-small has-text-danger">
            <i class="fa fa-users"></i>
          </span>
          <span>
            Arrêter de suivre
          </span>
        <% end %>
      </li>
    <% else %>
      <li class="mr-4">
        <%= button_to project_subscriptions_url(project), class: "btn btn-blue cursor-pointer", method: :post do %>
          <span>
            (<%= project.subscribers.count %>)
          </span>

          <span class="icon is-small has-text-success">
            <i class="fa fa-users"></i>
          </span>

          <span>
            Suivre
          </span>
        <% end %>
      </li>
    <% end %>

    <% if allow_action? :projects, :edit %>
      <li class="mr-4">
        <%= button_to "Editer", edit_project_url(project), method: :put, class: "btn btn-blue cursor-pointer" %>
      </li>
    <% end %>

    <% if allow_action? :assignments, :create %>
      <li class="mr-4">
        <%= button_to "Gérer les membres", project_assignments_path(project), method: :get, class: "btn btn-blue cursor-pointer" %>
      </li>
    <% end %>
  <% end %>

  <% if project.archived? %>
    <% if allow_action? :archives, :destroy %>
      <li class="mr-4">
        <%= link_to "Désarchiver", archive_path(project.id), method: :delete, class: "btn btn-red" %>
      </li>
    <% end %>
  <% end %>

  <% if allow_action? :projects, :delete %>
    <li class="mr-4">
      <%= button_to "Supprimer", project, method: :delete, class: "btn btn-red cursor-pointer" %>
    </li>
  <% end %>
  </ul>
