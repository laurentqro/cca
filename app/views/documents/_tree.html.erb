<ul>
  <% node.subtree.arrange.each do |parent, child| %>
    <% parent.children.each do |folder| %>
      <%= form.radio_button(:folder_id, folder.id, checked: folder.id == current_folder.id) %>
      <span class="icon">
        <i class="far fa-folder"></i>
      </span>

      <%= folder.name %>
      <%= render 'tree', node: folder, current_folder: current_folder, current_document: current_document, form: form %>
    <% end %>
  <% end %>
</ul>
