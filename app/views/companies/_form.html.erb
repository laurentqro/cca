      <h2><%= pluralize(company.errors.count, "erreur", "erreurs") %>:</h2>

      <ul>
        <% company.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

