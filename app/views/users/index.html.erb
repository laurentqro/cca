<section class="section">
  <div class="container">
    <h2 class="title is-2">Comptes</h2>

    <div class="content">
      <table class="table">
        <thead>
          <tr>
            <th>Nom</th>
            <th>Projets</th>
            <th>Groupes</th>
            <th>Email</th>
            <th>Niveau d'acces</th>
            <th>Statut</th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= link_to user.full_name, user %></td>
              <td><%= user.projects_names %></td>
              <td><%= user.companies_names %></td>
              <td><%= user.email %></td>
              <td><%= t("activerecord.attributes.user.group.#{user.group}") %></td>
              <td><%= user.account_status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <% if allow_action? :users, :create %>
        <%= link_to 'CrÃ©er un nouvel utilisateur', new_user_url, class:"button is-primary" %>
      <% end %>
    </div>
  </div>
</section>
