<section class="section">
  <div class="container">
    <div class="content">
      <h3 class="title is-3">Modifier mon mot de passe</h3>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |form| %>
        <%= devise_error_messages! %>
        <%= form.hidden_field :reset_password_token %>

        <div class="field">
          <%= form.label :password, "Nouveau mot de passe", class: "label" %>
          <% if @minimum_password_length %>
            <p><%= @minimum_password_length %> <%= t("devise.characters_minimum") %></p>
          <% end %>
          <div class="control">
            <%= form.password_field :password, autofocus: true, autocomplete: "off", class: "input" %>
          </div>
        </div>

        <div class="field">
          <%= form.label :password_confirmation, t("devise.password_confirmation"), class: "label" %>
          <div class="control">
            <%= form.password_field :password_confirmation, autocomplete: "off", class: "input" %>
          </div>
        </div>

        <div class="actions">
          <%= form.submit "Changer mon mot de passe", class: "button is-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</section>
