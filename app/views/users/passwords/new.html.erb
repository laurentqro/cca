<section class="section">
  <div class="container">
    <div class="content">
      <h2 class="title is-2"><%= t("devise.forgot_your_password") %></h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <p class="help"><%= t("devise.send_me_reset_password_instructions") %></p>
        <div class="field">
          <%= f.label :email, class: "label" %>
          <div class="control">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit t("devise.submit"), class: "button is-primary" %>
        </div>
      <% end %>
    </div>

    <%= render "users/shared/links" %>
  </div>
</section>
