<h2 class="mb-6">
  <%= @user.full_name %>
</h2>

<div class="flex mb-8">
  <% if allow_action?(:users, :edit, @user) %>
    <%= link_to "Editer", edit_user_url(@user), class: "btn btn-blue mr-4" %>
  <% end %>

  <% if allow_action?(:users, :impersonate) %>
    <%= button_to "Se connecter en tant que #{@user.first_name}", user_impersonation_path(@user), method: :post, class: "btn btn-blue mr-4" %>
  <% end %>

  <% if allow_action?(:users, :destroy, @user) %>
    <%= button_to "Supprimer", @user, method: :delete, class: "btn btn-red mr-4" %>
  <% end %>
</div>

<div class="mb-6">
  <h3>Statut du compte</h3>
  <p><%= @user.account_status %></p>
</div>

<div class="mb-6">
  <h3>Niveau d'acc√®s</h3>
  <p><%= t "activerecord.attributes.user.group.#{@user.group}" %></p>
</div>

<div class="mb-6">
  <h3>Email</h3>
  <p><%= @user.email %></p>
</div>

<div class="mb-6">
  <h3>Ville</h3>
  <p><%= @user.city %></p>
</div>

<div class="mb-6">
  <h3>Groupe</h3>
  <p><%= link_to @user.company.name, @user.company %></p>
</div>

<div class="mb-6">
  <h3>Projets</h3>
  <p><%= @user.projects_names %></p>
</div>
