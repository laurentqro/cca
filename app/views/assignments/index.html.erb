<% content_for :tail_scripts do %>
  <%= javascript_pack_tag "assignments", nonce: true %>
<% end %>

<section class="section">
  <div class="container">
    <h2 class="title is-2">Gestion des membres du projet '<%= @project.name %>'</h2>
    <div class="content">
      <div class="columns">
        <div class="column">
          <%= content_tag :div,
            id: "assignments-elm-app",
            data: {
              assignments_endpoint: api_project_assignments_url(@project),
              assignable_users_endpoint: api_project_assignable_users_url(@project),
              project_id: @project.id,
              assignments: @project_assignments_json,
              users: @assignable_users_json
            }.to_json do %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
