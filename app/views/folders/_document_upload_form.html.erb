<%= form_with(model: @folder.documents.build, local: true) do |f| %>
  <%= f.hidden_field :folder_id, value: @folder.id %>
  <div class="field">
    <div class="control">
      <%= file_field_tag 'document[file]', multiple: true, direct_upload: true %>
    </div>
  </div>
  <%= f.submit class: "btn btn-blue" %>
<% end %>
